#!/bin/bash

echo -e '\n'
echo -e "\e[1;33m                   "Checking Act links"                \e[0m"
 


if ping -c 2 106.51.239.226 > /dev/null ;then 
 echo  -e '\n' 
 echo  -e "\e[1;32m                   'Primary link Up-106.51.239.226' \e[0m";
else 
 echo -e '\n'
 echo  -e "\e[1;31m                   'Primary Link Down--106.51.239.226' \e[0m";
fi
if ping -c 2 49.204.73.118 > /dev/null ;then 
 echo -e '\n'
 echo -e "\e[1;32m                   'Secondary link Up-49.204.73.118' \e[0m";
else 
 echo -e '\n'
 echo -e "\e[1;31m                   'Secondary link Down-49.204.73.118' \e[0m";
fi
