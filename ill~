#!/bin/bash

echo -e '\n'
echo -e "\e[1;33m                   "Checking Act links"                \e[0m"
 


if ping -c 2 ip > /dev/null ;then 
 echo  -e '\n' 
 echo  -e "\e[1;32m                   'Primary link Up-ip' \e[0m";
else 
 echo -e '\n'
 echo  -e "\e[1;31m                   'Primary Link Down--ip' \e[0m";
fi
if ping -c 2 ip > /dev/null ;then 
 echo -e '\n'
 echo -e "\e[1;32m                   'Secondary link Up-ip' \e[0m";
else 
 echo -e '\n'
 echo -e "\e[1;31m                   'Secondary link Down-ip' \e[0m";
fi
